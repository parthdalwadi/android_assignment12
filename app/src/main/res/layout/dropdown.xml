<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:onClick="markerClickAction"
        android:background="@drawable/close_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Name:"
        android:textStyle="bold"
        android:id="@+id/place_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance:"
        android:textStyle="italic"
        android:id="@+id/distance"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration:"
        android:textStyle="italic"
        android:id="@+id/duration"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/dir_icon"
            android:onClick="markerClickAction"
            android:id="@+id/getDirBtn"
            android:layout_weight="1"/>
        <Button
            android:layout_width="50dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="50dp"
            android:background="@drawable/save_icon"
            android:onClick="markerClickAction"
            android:layout_weight="1"
            android:id="@+id/addToFvtBtn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/start_icon2"
            android:onClick="markerClickAction"
            android:layout_weight="1"
            android:id="@+id/setStartBtn"/>

    </LinearLayout>






</LinearLayout>